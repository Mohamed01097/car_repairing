    <record id="view_fleet_order_form_inherit" model="ir.ui.view">
        <field name="name">fleet order form</field>
        <field name="model">fleet.workorder</field>
        <field name="inherit_id" ref="car_repair_industry.view_fleet_workorder_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[2]" position="after">
                <!--                Chang Page Name Only + Add New One-->
                <page string="Before Installation">
                    <!--                    <field name="capture_ids" widget="one2many">-->
                    <!--                        <list create="false" edit="false" delete="true">-->
                    <!--                            <field name="name" readonly="1"/>-->
                    <!--                            <field name="datas" widget="image"/>-->
                    <!--                            <field name="mimetype" string="Type" readonly="1"/>-->
                    <!--                            <field name="file_size" string="Size" readonly="1"/>-->
                    <!--                            <button string="View" class="btn-primary" name="action_capture_show" type="object"-->
                    <!--                                    icon="fa-eye"/>-->
                    <!--                        </list>-->
                    <!--                    </field>-->
                    <button
                            string="Capture"
                            name="action_camera_capture_before"
                            type="object"
                            class="btn-primary mb-2"
                            icon="fa-camera"/>
                    <field name="capture_ids" mode="kanban">
                        <kanban create="false">
                            <templates>
                                <t t-name="card" class="flex-row">
                                    <aside class="o_kanban_aside_full">
                                        <field name="datas" class="o_kanban_image_fill w-100" widget="image"
                                               options="{'img_class': 'object-fit-cover'}" alt="Contact image"/>
                                    </aside>
                                    <main class="ps-2 ps-md-0">
                                        <field name="name" readonly="1" class="fw-bold"/>

                                        <div>Type:
                                            <field name="mimetype"/>
                                        </div>
                                        <div>Size:
                                            <field name="file_size"/>
                                        </div>
                                        <div class="mt-2">
                                            <a class="btn-primary" name="action_capture_show" type="object"
                                               icon="fa-eye"/>
                                            <a class="btn-primary" name="action_quick_delete" type="object"
                                               icon="fa-trash"/>
                                        </div>
                                    </main>
                                </t>

                            </templates>
                        </kanban>


                    </field>

                </page>
                <page name="work_permit" string="Work Permit">
                    <button
                            string="Capture"
                            name="action_camera_capture_permit"
                            type="object"
                            class="btn-primary mb-2"
                            icon="fa-camera"/>
                    <field name="permit_capture_ids" mode="kanban">
                        <kanban create="false" editable="false">
                            <templates>
                                <t t-name="card" class="flex-row">
                                    <aside class="o_kanban_aside_full">
                                        <field name="datas" class="o_kanban_image_fill w-100" widget="image"
                                               options="{'img_class': 'object-fit-cover'}" alt="Contact image"/>
                                    </aside>
                                    <main class="ps-2 ps-md-0">
                                        <field name="name" readonly="1" class="fw-bold"/>

                                        <div>Type:
                                            <field name="mimetype"/>
                                        </div>
                                        <div>Size:
                                            <field name="file_size"/>
                                        </div>

                                        <div class="mt-2">
                                            <a class="btn-primary" name="action_capture_show" type="object"
                                               icon="fa-eye"/>
                                            <a class="btn-primary" name="action_quick_delete" type="object"
                                               icon="fa-trash"/>
                                        </div>
                                    </main>
                                </t>

                            </templates>
                        </kanban>
                    </field>

                </page>
                <page string="After Installation">
                    <button
                            string="Capture"
                            name="action_camera_capture_after"
                            type="object"
                            class="btn-primary mb-2"
                            icon="fa-camera"/>
                    <field name="after_capture_ids" mode="kanban">
                        <kanban create="false">
                            <templates>
                                <t t-name="card" class="flex-row">
                                    <aside class="o_kanban_aside_full">
                                        <field name="datas" class="o_kanban_image_fill w-100" widget="image"
                                               options="{'img_class': 'object-fit-cover'}" alt="Contact image"/>
                                    </aside>
                                    <main class="ps-2 ps-md-0">
                                        <field name="name" readonly="1" class="fw-bold"/>

                                        <div>Type:
                                            <field name="mimetype"/>
                                        </div>
                                        <div>Size:
                                            <field name="file_size"/>
                                        </div>

                                        <div class="mt-2">
                                            <a class="btn-primary" name="action_capture_show" type="object"
                                               icon="fa-eye"/>
                                            <a class="btn-primary" name="action_quick_delete" type="object"
                                               icon="fa-trash"/>
                                        </div>
                                    </main>
                                </t>

                            </templates>
                        </kanban>
                    </field>

                </page>
            </xpath>
        </field>
    </record>
    <record id="view_ir_attachment_form_inherit_image_type" model="ir.ui.view">
        <field name="name">ir.attachment.form.inherit.image_type</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='datas']" position="attributes">
                <attribute name="widget">image</attribute>
            </xpath>
            <xpath expr="//field[@name='mimetype']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='website_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='res_model']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='create_uid']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[3]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[4]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[5]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>